@model Category
@{
    ViewData["Title"] = "Create Category";
}
<form method="post"> 
    <div class="border p-4 m-5">
        <div class="row mb-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Category Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" placeholder="Display Order" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary"style="width:150px">Create</button>
        <a class="btn btn-secondary" asp-controller="Category" asp-action="Index" style="width:150px">Back To List</a>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}